# SnipURL Environment Variables
# Copy this file to .env.local

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Database (Supabase)
DATABASE_URL=postgresql://username:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Optional: Google Safe Browsing API
GOOGLE_SAFE_BROWSING_API_KEY=your-google-api-key

# Analytics (Optional)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

# VirusTotal API (500 free requests/day, 4 requests/minute)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# URLVoid API (free tier available)
URLVOID_API_KEY=your_urlvoid_api_key_here

# Database
DATABASE_URL=your_database_url_here

# NextAuth Secret
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
